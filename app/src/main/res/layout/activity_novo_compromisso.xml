<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.agenda.NovoCompromissoActivity">


    <TextView
        android:id="@+id/titulo_novo_compromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="Informações do compromisso"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/titulo_novo_compromisso">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Data:"/>

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecionar data"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/titulo_horario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:text="Horário:"/>

            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecionar horário"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/titulo_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_usuario"
                android:layout_alignParentLeft="true"
                android:text="Descrição:"/>

            <EditText
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo_senha"
                android:inputType="textMultiLine"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_incluir_compromisso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incluir compromisso"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:background="@drawable/button_style"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
